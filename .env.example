# 易和书院多服务平台环境配置

# ===========================================
# 全局配置
# ===========================================

# 项目信息
PROJECT_NAME=易和书院多服务平台
PROJECT_VERSION=1.0.0
ENVIRONMENT=production

# 域名配置
DOMAIN=localhost
HTTPS_ENABLED=false

# ===========================================
# Nginx配置
# ===========================================

# SSL证书路径（如果启用HTTPS）
SSL_CERT_PATH=./nginx/ssl/cert.pem
SSL_KEY_PATH=./nginx/ssl/key.pem

# 基础认证（可选）
BASIC_AUTH_ENABLED=false
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=your-secure-password

# ===========================================
# 语音转文字服务配置
# ===========================================

# 服务启用状态
SPEECH_TO_TEXT_ENABLED=true

# SenseVoice模型配置
SENSEVOICE_MODEL_PATH=iic/SenseVoiceSmall
SENSEVOICE_DEVICE=auto
SENSEVOICE_BATCH_SIZE=1
SENSEVOICE_QUANTIZE=true
SENSEVOICE_CACHE_DIR=./data/speech-to-text/models

# 文件存储配置
UPLOAD_DIR=./data/speech-to-text/uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=wav,mp3,m4a,flac,aac,ogg,wma
FILE_CLEANUP_INTERVAL=24
FILE_RETENTION_HOURS=72

# 安全配置
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=./data/speech-to-text/logs
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ===========================================
# Jitsi会议系统配置
# ===========================================

# 服务启用状态
JITSI_ENABLED=false

# 域名配置
JITSI_DOMAIN=meet.localhost
JITSI_PUBLIC_URL=http://meet.localhost

# 功能开关
JITSI_ENABLE_AUTH=false
JITSI_ENABLE_GUESTS=true
JITSI_ENABLE_RECORDING=false
JITSI_ENABLE_TRANSCRIPTION=false

# 音视频设置
JITSI_START_WITH_AUDIO_MUTED=false
JITSI_START_WITH_VIDEO_MUTED=false
JITSI_RESOLUTION=720
JITSI_AUDIO_BITRATE=32000
JITSI_VIDEO_BITRATE=2500000

# ===========================================
# 监控和维护
# ===========================================

# 健康检查
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# 日志轮转
LOG_ROTATION_SIZE=100MB
LOG_RETENTION_DAYS=30

# 备份配置
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# ===========================================
# 开发和调试
# ===========================================

# 调试模式
DEBUG=false
VERBOSE_LOGGING=false

# 开发工具
HOT_RELOAD=false
API_DOCS_ENABLED=true

# 性能监控
METRICS_ENABLED=false
TRACING_ENABLED=false