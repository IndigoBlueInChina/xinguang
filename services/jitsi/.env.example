# ===========================================
# Jitsi Meet 会议系统配置
# ===========================================

# 域名配置
JITSI_DOMAIN=meet.localhost
DOCKER_HOST_ADDRESS=127.0.0.1

# Let's Encrypt配置（生产环境使用）
LETSENCRYPT_EMAIL=admin@localhost

# 时区设置
TZ=Asia/Shanghai

# ===========================================
# 认证密钥（生产环境请修改）
# ===========================================
# Jicofo组件密钥
JICOFO_COMPONENT_SECRET=jicofo-component-secret-change-this

# Jicofo认证密码
JICOFO_AUTH_PASSWORD=jicofo-auth-password-change-this

# JVB认证密码
JVB_AUTH_PASSWORD=jvb-auth-password-change-this

# Jigasi XMPP密码
JIGASI_XMPP_PASSWORD=jigasi-xmpp-password-change-this

# Jibri录制用户密码
JIBRI_RECORDER_PASSWORD=jibri-recorder-password-change-this

# Jibri XMPP密码
JIBRI_XMPP_PASSWORD=jibri-xmpp-password-change-this

# ===========================================
# 功能开关
# ===========================================
# 启用认证（0=关闭，1=开启）
ENABLE_AUTH=0

# 启用访客模式
ENABLE_GUESTS=1

# 启用录制功能
ENABLE_RECORDING=0

# 启用转录功能
ENABLE_TRANSCRIPTIONS=0

# 启用大厅功能
ENABLE_LOBBY=1

# 启用音视频审核
ENABLE_AV_MODERATION=1

# 启用分组讨论室
ENABLE_BREAKOUT_ROOMS=1

# 启用P2P连接
ENABLE_P2P=1

# 启用欢迎页面
ENABLE_WELCOME_PAGE=1

# 启用预加入页面
ENABLE_PREJOIN_PAGE=1

# ===========================================
# 音视频设置
# ===========================================
# 默认静音音频
START_AUDIO_MUTED=10

# 默认关闭视频
START_VIDEO_MUTED=10

# 仅音频模式启动
START_AUDIO_ONLY=0

# 启用立体声
ENABLE_STEREO=0

# 启用噪音检测
ENABLE_NOISY_MIC_DETECTION=1

# 分辨率设置
RESOLUTION=720
RESOLUTION_MIN=180
RESOLUTION_WIDTH=1280
RESOLUTION_WIDTH_MIN=320

# 起始比特率
START_BITRATE=800

# 桌面共享帧率
DESKTOP_SHARING_FRAMERATE_MIN=5
DESKTOP_SHARING_FRAMERATE_MAX=5

# ===========================================
# 网络设置
# ===========================================
# STUN服务器
JVB_STUN_SERVERS=meet-jit-si-turnrelay.jitsi.net:443

# 启用WebSocket
ENABLE_XMPP_WEBSOCKET=1
ENABLE_COLIBRI_WEBSOCKET=1

# 启用OCTO（多JVB支持）
ENABLE_OCTO=1

# ===========================================
# 界面定制
# ===========================================
# 默认语言
DEFAULT_LANGUAGE=zh

# 隐藏预会议按钮
HIDE_PREMEETING_BUTTONS=false

# 要求显示姓名
ENABLE_REQUIRE_DISPLAY_NAME=0

# ===========================================
# 集成服务（可选）
# ===========================================
# Google Analytics
# GOOGLE_ANALYTICS_ID=

# Amplitude分析
# AMPLITUDE_ID=

# Dropbox集成
# DROPBOX_APPKEY=
# DROPBOX_REDIRECT_URL=

# Microsoft API
# MICROSOFT_API_APP_CLIENT_ID=

# Google API
# GOOGLE_API_APP_CLIENT_ID=

# ===========================================
# 高级设置
# ===========================================
# Nginx工作进程数
NGINX_WORKER_PROCESSES=1

# Nginx工作连接数
NGINX_WORKER_CONNECTIONS=1024

# 部署信息
DEPLOYMENTINFO_ENVIRONMENT=production
DEPLOYMENTINFO_ENVIRONMENT_TYPE=standalone
DEPLOYMENTINFO_REGION=asia